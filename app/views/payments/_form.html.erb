<%= simple_form_for @payment, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :payment_date %>
  <%= error_span(@payment[:payment_date]) %>
  <%= f.input :start_date %>
  <%= error_span(@payment[:start_date]) %>
  <%= f.input :finish_date %>
  <%= error_span(@payment[:finish_date]) %>
  <%= f.input :payment_type_id %>
  <%= error_span(@payment[:payment_type_id]) %>
  <%= f.input :amount_paid %>
  <%= error_span(@payment[:amount_paid]) %>
  <%= f.input :payment_document_type_id %>
  <%= error_span(@payment[:payment_document_type_id]) %>
  <%= f.input :document_number %>
  <%= error_span(@payment[:document_number]) %>
  <%= f.input :booking_id %>
  <%= error_span(@payment[:booking_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                payments_path, :class => 'btn btn-default' %>
<% end %>
