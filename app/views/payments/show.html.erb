<%- model_class = Payment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:payment_date) %>:</strong></dt>
  <dd><%= @payment.payment_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
  <dd><%= @payment.start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:finish_date) %>:</strong></dt>
  <dd><%= @payment.finish_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_type_id) %>:</strong></dt>
  <dd><%= @payment.payment_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount_paid) %>:</strong></dt>
  <dd><%= @payment.amount_paid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_document_type_id) %>:</strong></dt>
  <dd><%= @payment.payment_document_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:document_number) %>:</strong></dt>
  <dd><%= @payment.document_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:booking_id) %>:</strong></dt>
  <dd><%= @payment.booking_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              payments_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_payment_path(@payment), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              payment_path(@payment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
