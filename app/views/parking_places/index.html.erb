<%- model_class = ParkingPlace -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:hourly_rate) %></th>
      <th><%= model_class.human_attribute_name(:daily_rate) %></th>
      <th><%= model_class.human_attribute_name(:weekly_rate) %></th>
      <th><%= model_class.human_attribute_name(:monthly_rate) %></th>
      <th><%= model_class.human_attribute_name(:spaces_number) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:georeference_x) %></th>
      <th><%= model_class.human_attribute_name(:georeference_y) %></th>
      <th><%= model_class.human_attribute_name(:parking_type_id) %></th>
      <th><%= model_class.human_attribute_name(:owner_type_id) %></th>
      <th><%= model_class.human_attribute_name(:organization_id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @parking_places.each do |parking_place| %>
      <tr>
        <td><%= link_to parking_place.id, parking_place_path(parking_place) %></td>
        <td><%= parking_place.description %></td>
        <td><%= parking_place.hourly_rate %></td>
        <td><%= parking_place.daily_rate %></td>
        <td><%= parking_place.weekly_rate %></td>
        <td><%= parking_place.monthly_rate %></td>
        <td><%= parking_place.spaces_number %></td>
        <td><%= parking_place.address %></td>
        <td><%= parking_place.georeference_x %></td>
        <td><%= parking_place.georeference_y %></td>
        <td><%= parking_place.parking_type_id %></td>
        <td><%= parking_place.owner_type_id %></td>
        <td><%= parking_place.organization_id %></td>
        <td><%= parking_place.user_id %></td>
        <td><%=l parking_place.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_parking_place_path(parking_place), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      parking_place_path(parking_place),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_parking_place_path,
            :class => 'btn btn-primary' %>
