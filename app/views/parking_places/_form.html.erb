<%= simple_form_for @parking_place, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :description , label: "Descripción"%>
  <%= error_span(@parking_place[:description]) %>
  <%= f.input :hourly_rate , label: "Tarifa por hora"%>
  <%= error_span(@parking_place[:hourly_rate]) %>
  <%= f.input :daily_rate , label: "Tarifa por día"%>
  <%= error_span(@parking_place[:daily_rate]) %>
  <%= f.input :weekly_rate, label: "Tarifa por semana" %>
  <%= error_span(@parking_place[:weekly_rate]) %>
  <%= f.input :monthly_rate, label: "Tarifa por mes" %>
  <%= error_span(@parking_place[:monthly_rate]) %>
  <%= f.input :spaces_number, label: "Nùmero de espacios" %>
  <%= error_span(@parking_place[:spaces_number]) %>
  <%= f.input :address, label: "Dirección completa" %>
  <%= error_span(@parking_place[:address]) %>
  <%= f.association :parking_type, label: "Tipo de Estacionamiento" %>
  <%= error_span(@parking_place[:parking_type_id]) %>
  <%= f.association :owner_type, label: "Tipo de Usuario" %>
  <%= error_span(@parking_place[:owner_type_id]) %>
  <%= f.association :organization, label: "Organizacion" %>
  <%= error_span(@parking_place[:organization_id]) %>
  <%= f.association  :user, label: "Usuario asignado", disabled: true %>
  <%= error_span(@parking_place[:user_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                parking_places_path, :class => 'btn btn-default' %>
<% end %>
