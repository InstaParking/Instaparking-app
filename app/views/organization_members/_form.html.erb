<%= simple_form_for @organization_member, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :member_type_id, label: "Tipo de miembro"%>
  <%= error_span(@organization_member[:member_type_id]) %>
  <%= f.association :organization, label: "Organizacion"%>
  <%= error_span(@organization_member[:organization_id]) %>
  <%= f.association :user, label: "Usuario" %>
  <%= error_span(@organization_member[:user_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                organization_members_path, :class => 'btn btn-default' %>
<% end %>
