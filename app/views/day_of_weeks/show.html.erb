<%- model_class = DayOfWeek -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @day_of_week.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mnemonic) %>:</strong></dt>
  <dd><%= @day_of_week.mnemonic %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              day_of_weeks_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_day_of_week_path(@day_of_week), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              day_of_week_path(@day_of_week),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
