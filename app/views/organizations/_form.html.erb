<%= simple_form_for @organization, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name, label: "Nombre" %>
  <%= error_span(@organization[:name]) %>
  <%= f.input :ruc, label: "RUC" %>
  <%= error_span(@organization[:ruc]) %>
  <%= f.input :address, label: "Direccion" %>
  <%= error_span(@organization[:address]) %>
  <!--<%= f.association :user, label: "Usuario" %>-->
  <!--<%= error_span(@organization[:user_id]) %>-->

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                organizations_path, :class => 'btn btn-default' %>
<% end %>
