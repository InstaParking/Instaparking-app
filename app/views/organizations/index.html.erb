<%- model_class = Organization -%>
<div class="page-header">
  <h1><%=t '.Organizacion'%>
    <!--%=t '.title', :default => model_class.model_name.human.pluralize.titleize %--></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:numero) %></th>
      <th><%= model_class.human_attribute_name(:Nombre_o_Razon_social) %></th>
      <th><%= model_class.human_attribute_name(:Ruc) %></th>
      <th><%= model_class.human_attribute_name(:Direccion) %></th>
      <th><%= model_class.human_attribute_name(:Nombre_Usuario) %></th>
      <th><%= model_class.human_attribute_name(:Creador) %></th>
      <th><%=t '.actions', :default => t("helpers.acciones") %></th>
    </tr>
  </thead>
  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= link_to organization.id, organization_path(organization) %></td>
        <td><%= organization.name %></td>
        <td><%= organization.ruc %></td>
        <td><%= organization.address %></td>
        <td><%= organization.user.name %></td>
        <td><%=l organization.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.viewmembers")),
                      organization_members_path(:organization_id => organization), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_organization_path(organization), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      organization_path(organization),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_organization_path,
            :class => 'btn btn-primary' %>
