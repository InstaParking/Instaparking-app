<%= simple_form_for @booking, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :booking_date, label: 'Fecha de Reserva' %>
  <%= error_span(@booking[:booking_date]) %>
  <%= f.input :start_date, label: 'Fecha de Inicio' %>
  <%= error_span(@booking[:start_date]) %>
  <%= f.input :finish_date, label: 'Fecha Fin' %>
  <%= error_span(@booking[:finish_date]) %>
  <%= f.input :vehicle_plate, label: 'Placa del Vehiculo' %>
  <%= error_span(@booking[:vehicle_plate]) %>
  <%= f.input :amount_payable, label: 'Monto' %>
  <%= error_span(@booking[:amount_payable]) %>

  
  
  <%= f.association :payment_type, label_method: :name, label: 'Tipo de Pago' %>
  <%= f.association :parking_place, label_method: :description, label: 'Nombre del estacionamiento' %>
  
  
  
   
  
  
  

  <%= f.button :submit, :class => 'btn-primary' %>
  <% if @id.nil?%>
  
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                bookings_path, :class => 'btn btn-default' %>
  <% else  %>
  <%=link_to t('.cancel', :default => t("helpers.links.cancel")),
                pages_busqueda_path, :class => 'btn btn-default'%> 
<% end %>
<% end %>