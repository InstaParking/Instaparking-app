<%- model_class = Booking -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:booking_date) %>:</strong></dt>
  <dd><%= @booking.booking_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
  <dd><%= @booking.start_date %></dd>
 
  <dt><strong><%= model_class.human_attribute_name(:vehicle_plate) %>:</strong></dt>
  <dd><%= @booking.vehicle_plate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount_payable) %>:</strong></dt>
  <dd><%= @booking.amount_payable %></dd>
  <dt><strong><%= model_class.human_attribute_name(:booking_status_id) %>:</strong></dt>
  <dd><%= @booking.booking_status_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_type_id) %>:</strong></dt>
  <dd><%= @booking.payment_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:parking_place_id) %>:</strong></dt>
  <dd><%= @booking.parking_place_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @booking.user_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              bookings_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_booking_path(@booking), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              booking_path(@booking),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
